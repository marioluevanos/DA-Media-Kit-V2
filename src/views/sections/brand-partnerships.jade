//- [data-nav] attribute will append section as a nav link in the header bar
section.brand-partnerships(data-nav='Brand Partnerships')

	+subtitle('Featured Brand Partnerships')

	each project, i in caseStudies

		.case(id= 'case-' + project.title.toLowerCase().replace(/[ ]/g, '-'))

				//- Video introduction
				.case-hero
					.case-title
						h2.title.crop= project.title

						.case-logos
							.case-cobrand: +svg({ use: '#logo-align-left', viewBox: '0 0 127 32', className: 'logo' })
							.case-cobrand: +svg({ use: project.logo, viewBox: '0 0 230 110', className: project.logo })

					if (/.mp4/g).test(project.video)
						+video(project.video, 'case-video')

				.case-main

					//- Background for text
					.case-slide-cover

					//- Cropped angled background
					.case-bg
						each bg in project.background
							.case-bg-image
								+image({
									src: bg,
									asBackground: true,
									class: bg.replace(/.jpg|.gif|.png/g, '')
								})

					//- Case Study text and stats
					.case-details: .case-txt
						.case-type
							p.sub-title(data-anim)= project.type
							hr(data-anim)
						.case-info
							h2.title.crop(data-anim)= project.title
						.case-meta
							+metaValue(project.stats)

						each paragraph in project.desc
							p(data-anim)= paragraph
						p(data-anim): a.link(href=project.cta, target='_blank') View On DeviantArt
		hr.white

