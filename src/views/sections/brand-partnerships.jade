mixin metaValue(type)

	//- Get the stats as an array
	- stats = Object.keys(type)

		//- Loop through the stats array
		each stat in stats
			- value = type[stat]
			- icon = stat.replace(/[ ]/, '-').toLowerCase()

			//- Check if stat has a value so it doesn't loop empty divs
			if value
				.case-meta-value
					span.case-stat(data-anim)
						.icon: +svg({ use: '#icon-' + icon + '-outline', viewBox: '0 0 64 64' })

						//- Add a "+" symbol to all, except "submissions"
						!= (stat !== 'submissions') ? value + '<small>+</small>' : value

					//- Capitazlie the first letter for the stat label
					span.case-label(data-anim)= stat.replace(/(\w{1})/, (all, first) => first.toUpperCase() )

